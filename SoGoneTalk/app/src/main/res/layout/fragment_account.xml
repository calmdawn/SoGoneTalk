<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/accountFragment_imageview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/accountFragment_button_comment"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="상태메시지변경"
        android:layout_below="@id/accountFragment_imageview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/sendBtnText"
        android:textStyle="bold"
        android:background="@color/sendBtn"
        />

</RelativeLayout>